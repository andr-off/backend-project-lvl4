extends /layouts/application.pug

block content
  .container
    h1.h1.text-center User settings

    .row
      .col-9
        h3.h3 Information
        .bg-light.rounded.p-3.mb-4
          +formFor(f, { url: urlFor('user', f.object.id), method: 'patch' })
            +input(f, 'email')
            +input(f, 'firstName')
            +input(f, 'lastName')
            +button(f)

        h3.h3 Password
        .bg-light.rounded.p-3.mb-4
          +formFor(p, { url: urlFor('user', p.object.id), method: 'patch' })
            +input(p, 'current', { as: 'password' })
            +input(p, 'password', { as: 'password' })
            +input(p, 'confirm', { as: 'password' })
            +button(p)

      .col-3
        h5.h5 User is created at:
        p= formatDate(user.createdAt)

        h5.h5 User is updated at:
        p= formatDate(user.updatedAt)

        +buttonTo(urlFor('user', f.object.id), 'delete')(class='btn-sm btn-danger' value='Delete User')
