extends /layouts/application.pug

block content
  h1.h1.text-center.mb-4=t('views.session.new.title')
  .row.justify-content-center
    .col-6
      .bg-light.border.rounded.p-3.mb-4.shadow-lg
        +formFor(f, { url: urlFor('session'), method: 'post' })
          +input(f, 'email', { as: 'email', label: t('views.session.email'), required: true })
          +input(f, 'password', { as: 'password', label: t('views.session.password'), required: true })
          +button(f, `${t('views.session.new.submit')}`)
