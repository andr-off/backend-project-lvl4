extends /layouts/application.pug

block content
  h1.h1.text-center.mb-4=t('views.taskStatuses.edit.title')

  +formFor(f, { url: urlFor('taskStatus', f.object.id), method: 'patch' })
    +input(f, 'name', { as: 'text', label: t('views.taskStatuses.statusName'), required: true })
    +button(f, t('views.taskStatuses.edit.submit'))
